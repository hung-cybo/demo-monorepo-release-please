{
  extends: [
    "github>cybozu/renovate-config",
    ":prConcurrentLimitNone"
  ],
  npm: {
    "schedule": ["at any time"],
    packageRules: [
      {
        // automerge minor updates of devDependencies
        matchPackagePatterns: [
          "*"
        ],
        matchDepTypes: [
          "devDependencies"
        ],
        matchUpdateTypes: [
          "minor"
        ],
        automerge: true,
      },
    ],
  },
  "packageRules": [
    {
      // automerge minor updates of devDependencies
      matchPackagePatterns: [
        "*"
      ],
      matchDepTypes: [
        "devDependencies",
        "action"
      ],
      matchUpdateTypes: [
        "minor"
      ],
      excludePackagePrefixes: [
        "actions/",
        "cybozu/"
      ],
      pinDigests: true,
      automerge: true,
    }
  ]
}
