{
  extends: [
    ":prConcurrentLimitNone",
    ":ignoreModulesAndTests",
    ":label(renovate)",
    ":timezone(Asia/Tokyo)",
    "group:monorepos",
    ":widenPeerDependencies",
    ":prImmediately",
    ":dependencyDashboard"
  ],
  ignorePaths: [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**",
  ],
  "schedule": ["*/5 * * * *"],
  npm: {
    "extends": [
      ":automergePatch",
      ":separatePatchReleases",
      "npm:unpublishSafe",
      "helpers:disableTypesNodeMajor"
    ],
    "schedule": ["*/5 * * * *"],
    "rangeStrategy": "bump",
    packageRules: [
      {
        // automerge minor updates of devDependencies
        matchPackagePatterns: [
          "*"
        ],
        matchDepTypes: [
          "devDependencies"
        ],
        matchUpdateTypes: [
          "minor"
        ],
        automerge: true,
      },
    ],
  },
  "packageRules": [
    {
      // Third party actions should be pinned with digest
      "matchDepTypes": [
        "action"
      ],
      excludePackagePrefixes: [
        "actions/",
        "cybozu/"
      ],
      "pinDigests": true
    }
  ]
}
